{% macro layer_tf1x_reshape(layer_name, shape, permutation) %}
class {{layer_name}}(Tf1xLayer):
    def __call__(self, x):
        y = tf.reshape(x, [-1] + {{shape}})
        y = tf.transpose(y, perm=[0] + [i+1 for i in {{permutation}}])
        return y

    @property
    def variables(self):
        return []

    @property
    def trainable_variables(self):
        return []
{% endmacro %}


