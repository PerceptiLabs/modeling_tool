                    np.random.seed(2020)
                    while True:
                        sample = np.random.uniform({{minval}}, {{maxval}}, {{shape}})
                        yield np.float32(sample)
            {% endif %}
        {% endfilter %}
        return gen()   
{% endmacro %}

